<h2>My Dashboard</h2>
<p> Hello! {{name}}</p>
<div class="well">
    <h4>Your Organizations
    {{#linkTo "organizations.new"}} <button class="btn"> Create </button>&nbsp;&nbsp; {{/linkTo}}
    {{#linkTo "organizations"}} <button class="btn"> Search </button> {{/linkTo}}
    </h4>
    <div class="container-fluid">
        <div class="row-fluid" id="bottom-scrollable">
            <div class="span6">
                <ul class="orgs-list">
                    {{#each organization in organizations}}
                        <li>{{#linkTo "organization" organization}} {{organization.name}} {{/linkTo}}</li>
                    {{else}}
                        {{#linkTo "organizations"}} <button class="btn">Join an Organization</button> {{/linkTo}}
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
</div>
